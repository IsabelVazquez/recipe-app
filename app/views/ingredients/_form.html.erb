<%= form_for [@recipe, @ingredient] do |f| %>
  <div class="fields_with_errors">
    <% unless @ingredient.errors.empty? %>
      <%= @ingredient.errors.full_messages %>
    <% end %>
  </div>

  <%= f.label :name %><br>
  <%= f.text_area :name %><br>

  <%= f.label :quantity %><br>
  <%= f.text_field :quantity %><br>

   <%= f.label :measurement %><br>
   <%= select_tag('ingredient[measurement]', options_for_select([
     ['bushel'], ['cup'], ['dash'], ['fl. oz.'],
     ['gallon'], ['gram'], ['items'], ['L'],
     ['lb.'], ['ml'], ['ounce'], ['pinch'],
     ['pint'], ['quart'], ['tbsp'], ['tsp']
   ]), include_blank: true) %><br>

    <%= f.hidden_field :recipe_id, value: @recipe.id %>
    <%= f.hidden_field :user_id, value: @recipe.user_id %>

    <%= f.submit %>
<% end %>
