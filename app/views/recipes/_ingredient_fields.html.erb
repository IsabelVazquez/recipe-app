<fieldset>
  <%= f.label :name %><br>
  <%= f.text_area :name %><br>

  <%= f.label :quantity %><br>
  <%= f.text_field :quantity %><br>

   <%= f.label :measurement %><br>
   <%= select_tag(:measurement, options_for_select([
     ['bushel'], ['cup'], ['dash'], ['fl. oz.'],
     ['gallon'], ['gram'], ['items'], ['L'],
     ['lb.'], ['ml'], ['ounce'], ['pinch'],
     ['pint'], ['quart'], ['tbsp'], ['tsp']
   ]), include_blank: true) %><br>

   <%= f.hidden_field :user_id, value: current_user.id %>

   <%= link_to_remove_association "remove ingredient", f %>

</fieldset>
