<h1>
  <%= recipe.name %>
</h1>

<ul>
  <li>
    <%= image_tag recipe.avatar.url(:thumb) %>
  </li>
  <li>
    <%= label :recipe, :steps %> <%= recipe.steps %>
  </li>
  <li>
    <%= label :recipe, :time %> <%= recipe.time %> minutes
  </li>
  <li>
    <%= label :recipe, :cuisine %> <%= recipe.cuisine.name if recipe.cuisine %>
  </li>

  <% recipe.items.each do |item| %>
  <li>
    <%= "#{item.quantity} #{item.measurement} - #{item.name}" %>
    <% if can? :update, recipe %>
      <%= link_to "Edit", edit_recipe_item_path(recipe, item) %>
    <% end %>
  </li>
  <% end %>
  <% if can? :create, recipe %>
    <%= link_to "Add Item", new_recipe_item_path(recipe) %><br>
    <%= link_to "Edit Recipe", edit_recipe_path(recipe) %><br>
  <% end %>
  <%= link_to "See Only The Ingredients", recipe_items_path(recipe) %><br>
</ul>
