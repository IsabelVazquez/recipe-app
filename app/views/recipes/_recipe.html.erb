<h1>
  <%= recipe.name %>
</h1>

<ul>
  <li>
    Steps: <%= recipe.steps %>
  </li>
  <li>
    Time: <%= recipe.time %> minutes
  </li>
  <li>
    Cuisine: <%= recipe.cuisine.name if recipe.cuisine %>
  </li>
  <% recipe.items.each do |item| %>
    <!-- <%= "#{item.quantity} #{item.measurement} - #{item.name}" %> -->
  <% if can? :update, recipe %>
    <%= link_to "Edit", edit_recipe_item_path(recipe, item) %>
  <% end %>
  
  <% end %>
  <% if can? :create, recipe %>
    <%= link_to "Add Item", new_recipe_item_path(recipe) %><br>
    <%= link_to "Edit Recipe", edit_recipe_path(recipe) %><br>
  <% end %>
  <%= link_to "See The Items", recipe_items_path(recipe), :class => "load_items" %><br>
</ul>

<div class="items">
</div>
