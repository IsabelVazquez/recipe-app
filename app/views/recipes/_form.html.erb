<%= form_for(recipe) do |f|%>
  <div class="fields_with_errors">
    <% unless recipe.errors.empty? %>
    <%= recipe.errors.full_messages %>
    <% end %>
  </div>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :steps %>
    <%= f.text_area :steps %>
  </p>

  <p>
    <%= f.label :time %>
    <%= f.text_field :time %>
  </p>

  <%= f.submit %>
<% end %>
