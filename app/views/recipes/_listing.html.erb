<% unless current_page?(action: 'short_time') %>
  <%= form_tag("/recipes", method: "get") do %>
    Filter by
    <%= label :recipe, :item %>
    <%= text_field_tag :item %>
    <%= submit_tag "Filter" %>
  <% end %>
<% end %>

<% recipes.each do |recipe| %>
  <div class="square">
    <div class="content">
      <div class="table">
        <div class="table-cell">
          <%= link_to recipe.name, recipe %>
        </div>
      </div>
    </div>
  </div>
<% end %>
